============================================================
ALPHA-PRIME v2.0 - Environment Configuration
============================================================

# ==========================================================
# CRITICAL - AI & APIs
# ==========================================================

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ==========================================================
# NOTIFICATIONS
# ==========================================================

DISCORD_WEBHOOK_URL=
DISCORD_RATE_LIMIT_RETRY=true
ALERT_MIN_CONFIDENCE=80

# ==========================================================
# SOCIAL SENTIMENT APIS
# ==========================================================

REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=ALPHA-PRIME:v2.0

TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=
STOCKTWITS_API_KEY=

# ==========================================================
# DATA SOURCES (PAID/OPTIONAL)
# ==========================================================

SEC_API_KEY=
NEWS_API_KEY=
ALPHAVANTAGE_API_KEY=

# ==========================================================
# SYSTEM CONFIGURATION
# ==========================================================

LOG_LEVEL=INFO
TIMEZONE=Asia/Kolkata
MARKET_OPEN_TIME=09:30
MARKET_CLOSE_TIME=15:30

# ==========================================================
# DATABASE & REDIS  (Windows local Postgres/Redis)
# ==========================================================

# These must match what you created in PostgreSQL:
#   CREATE USER alpha_prime_user WITH PASSWORD 'alpha_prime_pass_local';
#   CREATE DATABASE alpha_prime_dev OWNER alpha_prime_user;

DATABASE_URL=postgresql+asyncpg://alpha_prime_user:alpha_prime_pass_local@localhost:5432/alpha_prime_dev
REDIS_URL=redis://localhost:6379/0

# ==========================================================
# FILE PATHS
# ==========================================================

PORTFOLIO_PATH=data/portfolio.json
TRADE_HISTORY_PATH=data/trade_history.csv
CACHE_DIR=data/cache
LOG_DIR=logs
BACKUP_DIR=backups

# ==========================================================
# TRADING PARAMETERS
# ==========================================================

STARTING_CASH=10000.0
COMMISSION_PER_TRADE=0.0
MAX_RISK_PER_TRADE_PCT=2.0
MAX_PORTFOLIO_RISK_PCT=6.0
DAILY_LOSS_LIMIT_PCT=3.0
POSITION_SIZE_METHOD=ATR

# ==========================================================
# RISK MANAGEMENT
# ==========================================================

CIRCUIT_BREAKER_ENABLED=true
CONSECUTIVE_LOSS_LIMIT=3
VIX_SHUTDOWN_THRESHOLD=35
CORRELATION_LIMIT=0.7

# ==========================================================
# STRATEGY SETTINGS
# ==========================================================

ENABLE_MULTI_TIMEFRAME=true
ENABLE_REGIME_FILTER=true
ENABLE_EARNINGS_FILTER=true
REGIME_LOOKBACK_DAYS=60

# ==========================================================
# VALIDATION & MONITORING
# ==========================================================

ENABLE_DRIFT_MONITORING=true
DRIFT_CHECK_FREQUENCY_HOURS=24
BACKTEST_WALK_FORWARD_ENABLED=true
DATA_QUALITY_CHECKS_ENABLED=true

# ==========================================================
# PERFORMANCE OPTIMIZATION
# ==========================================================

CACHE_TTL_MINUTES=5
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SECONDS=30

# ==========================================================
# DEVELOPMENT / DEBUG
# ==========================================================

DEBUG_MODE=false
ENABLE_AUTO_TRADE=false
PAPER_TRADING_ONLY=true
MOCK_API_CALLS=false
